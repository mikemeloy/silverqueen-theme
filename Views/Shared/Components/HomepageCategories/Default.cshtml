@model IList<CategoryModel>
@using Nop.Core.Domain.Catalog
@if (Model.Count > 0)
{
    <div class="container">
        <div class="category-grid home-page-category-grid">
            <div class="row fb-md-parent fb-md-row fb-md-wrap fb-md-ai-center fb-md-j-center">
                @for (var i = 0; i < Math.Min(6, Model.Count); i++) {
                    var item = Model[i];
                    <div class="item-box col-xs-12 col-sm-6 col-md-4">
                        <div class="category-item product-category-item">
                            <div class="picture">
                                <a href="@Url.RouteUrl("Category", new { SeName = item.SeName })" title="@item.PictureModel.Title" class="product-img">
                                    <img alt="@item.PictureModel.AlternateText" src="@item.PictureModel.ImageUrl" title="@item.PictureModel.Title" />
                                </a>
                                <div class="title">
                                    <a href="@(Url.RouteUrl<Category>(new { SeName = item.SeName }))" title="@item.PictureModel.Title"> @item.Name</a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
}
@await Component.InvokeAsync(typeof(TopicBlockViewComponent), new { systemName = "HomepageAbout" })
@if (Model.Count > 6)
{
    <div class="container">
        <div class="category-grid home-page-category-grid">
            <div class="row fb-md-parent fb-md-row fb-md-wrap fb-md-ai-center fb-md-j-center">
                @for (var i = 6; i < Math.Min(12, Model.Count); i++) {
                    var item = Model[i];
                    <div class="item-box col-xs-12 col-sm-6 col-md-4">
